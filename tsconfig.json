{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "incremental": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "includes": ["./src/**/*"],
  "exclude": ["node_modules", "scripts", "dist", "ecosystem.config.js"]
}
